HOMEBREW_PATH=/usr/local
RBENV_PATH=$HOME/.rbenv
JENV_PATH=$HOME/.jenv
HEROKU_PATH=/usr/local/heroku

# use vim as the visual editor
export VISUAL=vim
export EDITOR=$VISUAL

# Set TERM (for tmux)
if [[ "$TERM" == "xterm" ]]; then
  TERM="xterm-256color"
fi

# Load NVM
if [[ -s "$HOME/.nvm/nvm.sh" ]]; then
  source "$HOME/.nvm/nvm.sh"
fi
if [[ -s "/usr/local/opt/nvm/nvm.sh" ]]; then
  export NVM_DIR=~/.nvm
  source "/usr/local/opt/nvm/nvm.sh"
fi

# Build PATH
# Homebrew
if [[ -n "$HOMEBREW_PATH" && -d "$HOMEBREW_PATH/bin" ]]; then
  export PATH=$HOMEBREW_PATH/bin:$HOMEBREW_PATH/sbin:$PATH
fi

# RBENV
if [[ -n "$RBENV_PATH" ]]; then
  if [[ -d "$RBENV_PATH/bin" ]]; then
    # path to rbenv on linux
    export PATH=$RBENV_PATH/bin:$PATH
  fi

  # load rbenv
  eval "$(rbenv init -)"
fi

# JENV
if [[ -n "$JENV_PATH" ]]; then
  if [[ -d "$JENV_PATH/bin" ]]; then
    # path to jenv on linux
    export PATH=$JENV_PATH/bin:$PATH
  fi

  # load jenv
  eval "$(jenv init -)"
fi

# Load virtualenvwrapper
if [[ -s "/usr/local/bin/virtualenvwrapper.sh" ]]; then
  source "/usr/local/bin/virtualenvwrapper.sh"

  if [[ -d "$HOME/.virtualenvs" ]]; then
    export WORKON_HOME=$HOME/.virtualenvs
  fi
fi

# Heroku
if [[ -n "$HEROKU_PATH" && -d "$HEROKU_PATH/bin" ]]; then
  export PATH=$PATH:$HEROKU_PATH/bin
fi

# personal bin
if [ -d "$HOME/.bin" ]; then
  export PATH=$HOME/.bin:$PATH
fi

# wordstream repo
if [ -d "$HOME/Developer/wordstream" ]; then
  export WS_REPO=$HOME/Developer/wordstream
  export PYTHONPATH=$PYTHONPATH:$WS_REPO/python_shared/wsframework/src:$WS_REPO/python_shared/webapp_framework/src:$WS_REPO/client/manager/src:$WS_REPO/server/wordstream/src:$WS_REPO/server/tag_manager/src
fi

# add personal lib
if [ -d "$HOME/.lib" ]; then
  if [ -n "$LD_LIBRARY_PATH" ]; then
    LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME/.lib
  else
    LD_LIBRARY_PATH=$HOME/.lib
  fi
  export LD_LIBRARY_PATH
fi

# Run local env commands if they exist
if [ -f ~/.env.local ]; then
    source ~/.env.local
fi
