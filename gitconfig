[init]
  templatedir = ~/.git_template
[core]
	excludesfile = ~/.gitignore
[push]
	default = simple
[color]
	ui = auto
[alias]
  a = add
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status -sb
	co = checkout
	c = checkout
	ci = commit
	cim = commit -m
	d = diff
  dc = diff --cached
  ds = diff --stat
	b = branch
	ba = branch -a
	logb = log --first-parent
	lgb = log --first-parent --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  u = diff --name-status --diff-filter=U
  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
  unhide-all = update-index --really-refresh
  hidden = !git ls-files -v | grep "^[[:lower:]]"
  ignored = !git status -s --ignored | grep \"^!!\"
[include]
  path = ~/.gitconfig.local
[include]
  path = ~/.gitconfig.default
[includeIf "gitdir:**/madaket/"]
  path = ~/.gitconfig.madaket
[includeIf "gitdir:/madaket/"]
  path = ~/.gitconfig.madaket
[mergetool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "p4merge"]
  cmd = p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
  keepBackups = false
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false
[merge]
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[difftool "p4merge"]
  cmd = p4merge \"$REMOTE\" \"$LOCAL\"
[diff]
	tool = Kaleidoscope
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = /usr/local/bin/gpg
