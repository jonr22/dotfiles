[init]
  defaultBranch = main
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[push]
	default = simple
[pull]
  ff = only
[color]
	ui = auto
[alias]
  a = add
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status -sb
	co = checkout
	c = checkout
	ci = commit
	cim = commit -m
	d = diff
  dc = diff --cached
  ds = diff --stat
	b = branch
	ba = branch -a
	logb = log --first-parent
	lgb = log --first-parent --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  u = diff --name-status --diff-filter=U
  ignored = !git status -s --ignored | grep \"^!!\"
[include]
  path = ~/.gitconfig.local
[include]
  path = ~/.gitconfig.default
[includeIf "gitdir:**/dailyreader/"]
  path = ~/.gitconfig.dailyreader
[difftool]
	prompt = false

